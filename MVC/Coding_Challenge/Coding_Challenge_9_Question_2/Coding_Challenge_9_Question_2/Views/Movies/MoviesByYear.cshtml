@model IEnumerable<Coding_Challenge_9_Question_2.Models.Movies>

@{
    ViewBag.Title = "Movies By Year";
}

<h2>Find Movies by Release Year</h2>

@using (Html.BeginForm("MoviesByYear", "Movies", FormMethod.Get))
{
    <div class="form-group">
        <label for="year">Enter Year:</label>
        <input type="number" name="year" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
}

<hr />

@if (Model != null && Model.Any())
{
    <h3>Movies released in @Request.QueryString["year"]</h3>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Movie Name</th>
                <th>Director Name</th>
                <th>Date of Release</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>@movie.MovieName</td>
                    <td>@movie.DirectorName</td>
                    <td>@movie.DateofRelease.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>
}
else if (Request.QueryString["year"] != null)
{
    <p>No movies found for the year @Request.QueryString["year"].</p>
}
